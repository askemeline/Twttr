{% extends 'layout.html.twig' %}

{% block page_title %}Twitter{% endblock %}

{% block content %}
    {% if session is defined %}
        {% if data is defined %}
            <br>
            <form  id="formTweet" name="new-comment" method="post" action="?action=addTweet">
                <textarea name="comment-content" ></textarea>
                <br> <button type="submit" name="submit-comment-btn">Tweet!</button>
            </form>

            <div class="comments">
                <ul>
                    {% for posts in data %}
                        <li><h4>{{ posts.firstname }}</h4> {{ posts.content }}
                            <br>
                            <br> 
                        </li>

                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    {% else %}

    {% endif %}
{% endblock %}